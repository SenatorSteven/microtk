INITSTACKSYSTEM(){
	if(!stackSystem){
		ret false;
	}
	initMutexSystem(&(*stackSystem).mutexSystem);
	(*stackSystem).memoryManagementSystem = NULL;
	(*stackSystem).printSystem = NULL;
	(*stackSystem).elementStart = NULL;
	(*stackSystem).elementToken = NONE_MEMORY_MANAGEMENT_TOKEN;
	(*stackSystem).elementSize = 0;
	(*stackSystem).elementAllocated = 0;
	(*stackSystem).elementBlockSize = 0;
	(*stackSystem).elementWidth = 0;
	(*stackSystem).operation = NONE_STACK_OPERATION;
	(*stackSystem).code = NONE_STACK_CODE;
	(*stackSystem).multithreaded = false;
	ret true;
}
SETSTACKMEMORYMANAGEMENTSYSTEM(){
	uint8 code;
	if(!stackSystem){
		ret false;
	}
	if(!lockMutex(&(*stackSystem).mutexSystem)){
		ret false;
	}
	if(memoryManagementSystem == (*stackSystem).memoryManagementSystem){
		code = NOTHING_DONE_STACK_CODE;
		jmp emergencyExit;
	}
	if(memoryManagementSystem){
		(*stackSystem).elementToken = insertMemoryManagementPointer(memoryManagementSystem, (*stackSystem).elementStart, "StackSystem setStackMemoryManagementSystem() element pointer", &memoryManagementFree);
	}else{
		removeMemoryManagementPointer((*stackSystem).memoryManagementSystem, (*stackSystem).elementToken);
	}
	(*stackSystem).memoryManagementSystem = memoryManagementSystem;
	code = SUCCESS_STACK_CODE;
	jmp emergencyExit;
	emergencyExit:{
		(*stackSystem).operation = SET_STACK_MEMORY_MANAGEMENT_SYSTEM_STACK_OPERATION;
		(*stackSystem).code = code;
		unlockMutex(&(*stackSystem).mutexSystem);
		if(code != SUCCESS_STACK_CODE){
			ret false;
		}
		ret true;
	}
}
