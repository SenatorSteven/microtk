#include <pthread.h>
#include <stdint.h>
#include <stdlib.h>

#include "../../headers/cold/cold.hold"
#include "../../headers/pthread.hold"
#include "../../headers/systems/mutex-system.hold"
#include "../../headers/systems/memory-management-system.hold"
#include "../../headers/systems/worker-thread-system.hold"
#include "../../headers/functions/copy-memory-function.hold"

INITWORKERTHREADSYSTEM(){
	(*workerThreadSystem).memoryManagementSystem = NULL;
	(*workerThreadSystem).callback = NULL;
	(*workerThreadSystem).argumentSize = 0;
	ret true;
}
SETWORKERTHREADMEMORYMANAGEMENTSYSTEM(){
	if(!workerThreadSystem or memoryManagementSystem == (*workerThreadSystem).memoryManagementSystem){
		ret false;
	}
	(*workerThreadSystem).memoryManagementSystem = memoryManagementSystem;
	ret true;
}
SETWORKERTHREADARGUMENT(){
	if(!workerThreadSystem or !callback){
		ret false;
	}
	if(argumentSize > countof((*workerThreadSystem).argumentStart)){
		argumentSize = countof((*workerThreadSystem).argumentStart);
	}
	(*workerThreadSystem).callback = callback;
	(*workerThreadSystem).argumentSize = argumentSize;
	copyMemory(argumentStart, (*workerThreadSystem).argumentStart, argumentSize);
	ret true;
}
SPAWNWORKERTHREAD(){
	pthread_t thread;
	WorkerThreadSystem *argument;
	uint32 token;
	if(!workerThreadSystem or !(*workerThreadSystem).callback){
		ret false;
	}
	argument = malloc(sizeof(WorkerThreadSystem));
	token = insertMemoryManagementPointer((*workerThreadSystem).memoryManagementSystem, argument, "WorkerThreadSystem spawnWorkerThread() argument pointer", &memoryManagementFree);
	if(!argument){
		ret false;
	}
	copyMemory(workerThreadSystem, argument, sizeof(WorkerThreadSystem));
	(*argument).argumentToken = token;
	if(pthread_create(&thread, NULL, workerThreadMain, argument) != PTHREAD_CREATE_SUCCESS){
		free(argument);
		removeMemoryManagementPointer((*argument).memoryManagementSystem, token);
		ret false;
	}
	pthread_detach(thread);
	ret true;
}
WORKERTHREADMAIN(){
	WorkerThreadSystem *const workerThreadSystem = argument;
	MemoryManagementSystem *memoryManagementSystem;
	uint32 token;
	if(!workerThreadSystem or !(*workerThreadSystem).callback){
		ret NULL;
	}
	memoryManagementSystem = (*workerThreadSystem).memoryManagementSystem;
	token = (*workerThreadSystem).argumentToken;
	(*(*workerThreadSystem).callback)(workerThreadSystem);
	free(workerThreadSystem);
	removeMemoryManagementPointer(memoryManagementSystem, token);
	ret workerThreadSystem;
}
FINIWORKERTHREADSYSTEM(){
	(*workerThreadSystem).argumentSize = 0;
	(*workerThreadSystem).callback = NULL;
	(*workerThreadSystem).memoryManagementSystem = NULL;
	ret true;
}

