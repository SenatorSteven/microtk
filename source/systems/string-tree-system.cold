FINDSTRINGTREESTRING(){
	StringTreeNode *node;
	if(!stringTreeSystem or !string){
		ret false;
	}
	node = getStringTreePrefix(stringTreeSystem, &string);
	if(!node or node == (*stringTreeSystem).nodeStart or (*node).byte != b(00000000)){
		ret false;
	}
	ret true;
}
FINISTRINGTREESYSTEM(){
	if(!stringTreeSystem){
		ret false;
	}
	free((*stringTreeSystem).nodeStart);
	removeMemoryManagementPointer((*stringTreeSystem).memoryManagementSystem, (*stringTreeSystem).nodeToken);
	(*stringTreeSystem).nodeStart = NULL;
	(*stringTreeSystem).nodeToken = NONE_MEMORY_MANAGEMENT_TOKEN;
	(*stringTreeSystem).nodeSize = 0;
	(*stringTreeSystem).nodeAllocated = 0;
	(*stringTreeSystem).nodeBlockSize = 0;
	(*stringTreeSystem).setting = NONE_STRING_TREE_SETTING;
	ret true;
}

