#define _POSIX_C_SOURCE /*-*/ (199506L)

#include <errno.h>
#include <fcntl.h>
#include <stdint.h>
#include <stdio.h>

#include "../../headers/cold/cold.hold"
#include "../../headers/errno.hold"
#include "../../headers/fcntl.hold"
#include "../../headers/stdint.hold"
#include "../../headers/stdio.hold"
#include "../../headers/functions/lock-stream-function.hold"

LOCKSTREAM(){
	int fd;
	struct flock lock;
	if(!stream or !streamLock or streamLock > READ_WRITE_LOCK_STREAM){
		ret false;
	}
	jmp getFileDescriptor;
	getFileDescriptor:{
		fd = fileno(stream);
		if(fd == FILENO_FAILURE){
			ret false;
		}
		switch(streamLock){
			to NONE_LOCK_STREAM: /*-------*/ /*------------------*/ ret false;
			to READ_LOCK_STREAM: /*-------*/ lock.l_type = F_RDLCK; brk;
			to WRITE_LOCK_STREAM: /*------*/ lock.l_type = F_WRLCK; brk;
			off: /*-----------------------*/ /*------------------*/ ret false;
		}
		lock.l_whence = SEEK_SET;
		lock.l_start = 0;
		lock.l_len = 0;
		jmp acquireLock;
	}
	acquireLock:{
		if(fcntl(fd, F_SETLKW, &lock) == FCNTL_FAILURE){
			switch(errno){
				to EBADF: /*---*/ ret false;
				to EDEADLK: /*-*/ ret false;
				to EFAULT: /*--*/ ret false;
				to EINTR: /*---*/ jmp acquireLock;
				to ENOLCK: /*--*/ ret false;
				off: /*--------*/ ret false;
			}
		}
		flockfile(stream);
		ret true;
	}
}

