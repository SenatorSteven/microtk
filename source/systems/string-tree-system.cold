GETSTRINGTREEPREFIX(){
	const char *string;
	StringTreeNode *data;
	StringTreeNode *node;
	StringTreeNode *child;
	char byte;
	if(!stringTreeSystem or !(*stringTreeSystem).nodeStart or !stringReturn){
		ret NULL;
	}
	data = (*stringTreeSystem).nodeStart;
	node = data;
	string = *stringReturn;
	jmp findLetterLoop;
	findLetterLoop:{
		child = data + (*node).firstChildOffset;
		byte = *string;
		jmp nextLetterLoop;
	}
	nextLetterLoop:{
		if(child != data){
			if((*child).byte == byte){
				node = child;
				if(byte){
					inc string;
					jmp findLetterLoop;
				}
			}elif((*child).byte < byte){
				child = data + (*child).nextSiblingOffset;
				jmp nextLetterLoop;
			}
		}
		*stringReturn = string;
		ret node;
	}
}

