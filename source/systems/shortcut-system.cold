FINISHORTCUTSYSTEM(){
	if(!shortcutSystem){
		ret false;
	}
	removeAllShortcuts(shortcutSystem);
	(*shortcutSystem).memoryManagementSystem = NULL;
	finiStackSystem(&(*shortcutSystem).stackSystem);
	(*shortcutSystem).shortcutBlockSize = 0;
	(*shortcutSystem).codeListSize = 0;
	ret true;
}

