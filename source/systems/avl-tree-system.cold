ROTATERIGHTAVLTREENODE(){
	AvlTreeNode *nodeStart;
	AvlTreeNode *node;
	AvlTreeNode *leftChild;
	AvlTreeNode *leftChildRight;
	uint parentOffset;
	if(!avlTreeSystem or nodeOffset < 1 or nodeOffset >= (*avlTreeSystem).nodeAllocated){
		ret 0;
	}
	nodeStart = (*avlTreeSystem).nodeStart;
	node = nodeStart + nodeOffset;
	leftChild = nodeStart + (*node).leftChildOffset;
	leftChildRight = nodeStart + (*leftChild).rightChildOffset;
	parentOffset = (*node).parentOffset;
	if(parentOffset){
		AvlTreeNode *const parentNode = nodeStart + parentOffset;
		if((*parentNode).leftChildOffset == nodeOffset){
			(*parentNode).leftChildOffset = leftChild - nodeStart;
		}else{
			(*parentNode).rightChildOffset = leftChild - nodeStart;
		}
	}
	(*leftChild).parentOffset = parentOffset;
	(*node).parentOffset = leftChild - nodeStart;
	(*leftChild).rightChildOffset = node - nodeStart;
	(*node).leftChildOffset = leftChildRight - nodeStart;
	(*leftChildRight).parentOffset = node - nodeStart;
	(*leftChild).height = max(getAvlTreeNodeHeight(avlTreeSystem, (*leftChild).leftChildOffset), getAvlTreeNodeHeight(avlTreeSystem, (*leftChild).rightChildOffset)) + 1;
	(*node).height = max(getAvlTreeNodeHeight(avlTreeSystem, (*node).leftChildOffset), getAvlTreeNodeHeight(avlTreeSystem, (*node).rightChildOffset)) + 1;
	ret leftChild - nodeStart;
}
ROTATELEFTAVLTREENODE(){
	AvlTreeNode *nodeStart;
	AvlTreeNode *node;
	AvlTreeNode *rightChild;
	AvlTreeNode *rightChildLeft;
	uint parentOffset;
	if(!avlTreeSystem or nodeOffset < 1 or nodeOffset >= (*avlTreeSystem).nodeAllocated){
		ret 0;
	}
	nodeStart = (*avlTreeSystem).nodeStart;
	node = nodeStart + nodeOffset;
	rightChild = nodeStart + (*node).rightChildOffset;
	rightChildLeft = nodeStart + (*rightChild).leftChildOffset;
	parentOffset = (*node).parentOffset;
	if(parentOffset){
		AvlTreeNode *const parentNode = nodeStart + parentOffset;
		if((*parentNode).leftChildOffset == nodeOffset){
			(*parentNode).leftChildOffset = rightChild - nodeStart;
		}else{
			(*parentNode).rightChildOffset = rightChild - nodeStart;
		}
	}
	(*rightChild).parentOffset = parentOffset;
	(*node).parentOffset = rightChild - nodeStart;
	(*rightChild).leftChildOffset = node - nodeStart;
	(*node).rightChildOffset = rightChildLeft - nodeStart;
	(*rightChildLeft).parentOffset = node - nodeStart;
	(*rightChild).height = max(getAvlTreeNodeHeight(avlTreeSystem, (*rightChild).leftChildOffset), getAvlTreeNodeHeight(avlTreeSystem, (*rightChild).rightChildOffset)) + 1;
	(*node).height = max(getAvlTreeNodeHeight(avlTreeSystem, (*node).leftChildOffset), getAvlTreeNodeHeight(avlTreeSystem, (*node).rightChildOffset)) + 1;
	ret rightChild - nodeStart;
}
GETAVLTREENODEHEIGHT(){
	if(!avlTreeSystem or nodeOffset >= (*avlTreeSystem).nodeAllocated){
		ret 0;
	}
	ret (*((*avlTreeSystem).nodeStart + nodeOffset)).height;
}
