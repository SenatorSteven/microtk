INITAVLTREESYSTEM(){
	if(!avlTreeSystem){
		ret false;
	}
	(*avlTreeSystem).memoryManagementSystem = NULL;
	(*avlTreeSystem).nodeStart = NULL;
	(*avlTreeSystem).nodeToken = NONE_MEMORY_MANAGEMENT_TOKEN;
	(*avlTreeSystem).nodeSize = 0;
	(*avlTreeSystem).nodeAllocated = 0;
	(*avlTreeSystem).nodeBlockSize = 0;
	(*avlTreeSystem).rootNodeOffset = 0;
	ret true;
}
SETAVLTREEMEMORYMANAGEMENTSYSTEM(){
	if(!avlTreeSystem or memoryManagementSystem == (*avlTreeSystem).memoryManagementSystem){
		ret false;
	}
	if(memoryManagementSystem){
		(*avlTreeSystem).nodeToken = insertMemoryManagementPointer(memoryManagementSystem, (*avlTreeSystem).nodeStart, "AvlTreeSystem setAvlTreeMemoryManagementSystem() node pointer", &memoryManagementFree);
	}else{
		removeMemoryManagementPointer((*avlTreeSystem).memoryManagementSystem, (*avlTreeSystem).nodeToken);
	}
	(*avlTreeSystem).memoryManagementSystem = memoryManagementSystem;
	ret true;
}
SETAVLTREEBLOCKSIZE(){
	if(!avlTreeSystem or blockSize == (*avlTreeSystem).nodeBlockSize){
		ret false;
	}
	(*avlTreeSystem).nodeBlockSize = blockSize;
	ret true;
}
INSERTAVLTREENODE(){
	AvlTreeNode *nodeStart;
	AvlTreeNode *node;
	uint childOffset;
	uint parentOffset;
	if(!avlTreeSystem or !key){
		ret false;
	}
	if((*avlTreeSystem).nodeAllocated < 2){
		childOffset = 0;
		parentOffset = 0;
		jmp insertNode;
	}
	nodeStart = (*avlTreeSystem).nodeStart;
	node = nodeStart + (*avlTreeSystem).rootNodeOffset;
	jmp searchLoop;
	searchLoop:{
		if(key < (*node).key){
			if(!(*node).leftChildOffset){
				childOffset = 1;
				parentOffset = node - nodeStart;
				jmp insertNode;
			}
			node = nodeStart + (*node).leftChildOffset;
			jmp searchLoop;
		}
		if(key > (*node).key){
			if(!(*node).rightChildOffset){
				childOffset = 2;
				parentOffset = node - nodeStart;
				jmp insertNode;
			}
			node = nodeStart + (*node).rightChildOffset;
			jmp searchLoop;
		}
		ret false;
	}
	insertNode:{
		if((*avlTreeSystem).nodeAllocated == (*avlTreeSystem).nodeSize){
			void *temp;
			(*avlTreeSystem).nodeSize += (*avlTreeSystem).nodeBlockSize;
			temp = realloc((*avlTreeSystem).nodeStart, (*avlTreeSystem).nodeSize * sizeof(AvlTreeNode));
			if(!(*avlTreeSystem).nodeToken){
				(*avlTreeSystem).nodeToken = insertMemoryManagementPointer((*avlTreeSystem).memoryManagementSystem, temp, "AvlTreeSystem insertAvlTreeNode() node pointer", &memoryManagementFree);
			}else{
				updateMemoryManagementPointer((*avlTreeSystem).memoryManagementSystem, (*avlTreeSystem).nodeToken, temp);
			}
			if(!temp){
				(*avlTreeSystem).nodeSize -= (*avlTreeSystem).nodeBlockSize;
				ret false;
			}
			(*avlTreeSystem).nodeStart = temp;
			if(!(*avlTreeSystem).nodeAllocated){
				inc (*avlTreeSystem).nodeAllocated;
				jmp insertNode;
			}
		}
		nodeStart = (*avlTreeSystem).nodeStart;
		if(childOffset == 1){
			(*(nodeStart + parentOffset)).leftChildOffset = (*avlTreeSystem).nodeAllocated;
		}elif(childOffset == 2){
			(*(nodeStart + parentOffset)).rightChildOffset = (*avlTreeSystem).nodeAllocated;
		}
		node = nodeStart + (*avlTreeSystem).nodeAllocated;
		(*node).key = key;
		(*node).value = value;
		(*node).height = 1;
		(*node).parentOffset = parentOffset;
		(*node).leftChildOffset = 0;
		(*node).rightChildOffset = 0;
		inc (*avlTreeSystem).nodeAllocated;
		jmp updateNodeLoop;
	}
	updateNodeLoop:{
		(*avlTreeSystem).rootNodeOffset = node - nodeStart;
		node = nodeStart + (*node).parentOffset;
		if(node != nodeStart){
			const int balance = getAvlTreeNodeHeight(avlTreeSystem, (*node).leftChildOffset) - getAvlTreeNodeHeight(avlTreeSystem, (*node).rightChildOffset);
			(*node).height = max(getAvlTreeNodeHeight(avlTreeSystem, (*node).leftChildOffset), getAvlTreeNodeHeight(avlTreeSystem, (*node).rightChildOffset)) + 1;
			if(balance > 1){
				AvlTreeNode *const leftChild = nodeStart + (*node).leftChildOffset;
				if(key != (*leftChild).key){
					if(key > (*leftChild).key){
						(*node).leftChildOffset = rotateLeftAvlTreeNode(avlTreeSystem, (*node).leftChildOffset);
					}
					rotateRightAvlTreeNode(avlTreeSystem, node - nodeStart);
				}
				jmp updateNodeLoop;
			}
			if(balance < -1){
				AvlTreeNode *const rightChild = nodeStart + (*node).rightChildOffset;
				if(key != (*rightChild).key){
					if(key < (*rightChild).key){
						(*node).rightChildOffset = rotateRightAvlTreeNode(avlTreeSystem, (*node).rightChildOffset);
					}
					rotateLeftAvlTreeNode(avlTreeSystem, node - nodeStart);
				}
				jmp updateNodeLoop;
			}
			jmp updateNodeLoop;
		}
		ret true;
	}
}
