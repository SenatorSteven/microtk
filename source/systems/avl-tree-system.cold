FINDAVLTREEKEY(){
	AvlTreeNode *nodeStart;
	AvlTreeNode *node;
	if(!avlTreeSystem or (*avlTreeSystem).nodeAllocated < 2){
		ret NULL;
	}
	nodeStart = (*avlTreeSystem).nodeStart;
	node = nodeStart + (*avlTreeSystem).rootNodeOffset;
	jmp findAVLTreeKeyLoop;
	findAVLTreeKeyLoop:{
		if(node == nodeStart){
			ret NULL;
		}
		if(key < (*node).key){
			node = nodeStart + (*node).leftChildOffset;
			jmp findAVLTreeKeyLoop;
		}
		if(key > (*node).key){
			node = nodeStart + (*node).rightChildOffset;
			jmp findAVLTreeKeyLoop;
		}
		ret node;
	}
}
TRAVERSEAVLTREEINORDER(){
	AvlTreeNode *nodeStart;
	AvlTreeNode *node;
	uint key;
	if(!avlTreeSystem or (*avlTreeSystem).nodeAllocated < 2 or !function){
		ret false;
	}
	nodeStart = (*avlTreeSystem).nodeStart;
	node = nodeStart + (*avlTreeSystem).rootNodeOffset;
	key = 0;
	jmp traverseAvlTreeInOrderLoop;
	traverseAvlTreeInOrderLoop:{
		if((*node).leftChildOffset and (*(nodeStart + (*node).leftChildOffset)).key > key){
			node = nodeStart + (*node).leftChildOffset;
			jmp traverseAvlTreeInOrderLoop;
		}
		if((*node).key > key){
			if(!(*function)(avlTreeSystem, node, argument)){
				ret false;
			}
			key = (*node).key;
		}
		if((*node).rightChildOffset and (*(nodeStart + (*node).rightChildOffset)).key > key){
			node = nodeStart + (*node).rightChildOffset;
			jmp traverseAvlTreeInOrderLoop;
		}
		if((*node).parentOffset){
			node = nodeStart + (*node).parentOffset;
			jmp traverseAvlTreeInOrderLoop;
		}
		ret true;
	}
}
