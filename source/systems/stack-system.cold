			ret false;
		}
		ret true;
	}
}
FINISTACKSYSTEM(){
	if(!stackSystem){
		ret false;
	}
	if(!finiMutexSystem(&(*stackSystem).mutexSystem)){
		ret false;
	}
	(*stackSystem).multithreaded = false;
	(*stackSystem).elementWidth = 0;
	(*stackSystem).elementBlockSize = 0;
	removeAllStackElements(stackSystem);
	(*stackSystem).code = NONE_STACK_CODE;
	(*stackSystem).operation = NONE_STACK_OPERATION;
	(*stackSystem).printSystem = NULL;
	(*stackSystem).memoryManagementSystem = NULL;
	ret true;
}
PRINTSTACKLOG(){
	const char *operation;
	const char *code;
	PrintSystem *printSystem;
	bool success;
	if(!stackSystem){
		ret false;
	}
	if(!lockMutex(&(*stackSystem).mutexSystem)){
		ret false;
	}
	printSystem = (*stackSystem).printSystem;
	success = false;
	if(!printSystem){
		jmp emergencyExit;
	}
	if(!lockMutex(&(*printSystem).mutexSystem)){
		jmp emergencyExit;
	}
	switch((*stackSystem).operation){
		to NONE_STACK_OPERATION: /*-------------------------------*/ operation = NULL; /*-----------------------------*/ brk;
		to SET_STACK_MEMORY_MANAGEMENT_SYSTEM_STACK_OPERATION: /*-*/ operation = "setStackMemoryManagementSystem"; /*-*/ brk;
		to SET_STACK_PRINT_SYSTEM_STACK_OPERATION: /*-------------*/ operation = "setStackPrintSystem"; /*------------*/ brk;
		to SET_STACK_BLOCK_SIZE_STACK_OPERATION: /*---------------*/ operation = "setStackBlockSize"; /*--------------*/ brk;
		to SET_STACK_ELEMENT_WIDTH_STACK_OPERATION: /*------------*/ operation = "setStackElementWidth"; /*-----------*/ brk;
		to SET_STACK_MULTITHREADING_STACK_OPERATION: /*-----------*/ operation = "setStackMultithreading"; /*---------*/ brk;
		to PUSH_STACK_ELEMENT_STACK_OPERATION: /*-----------------*/ operation = "pushStackElement"; /*---------------*/ brk;
		to POP_STACK_ELEMENT_STACK_OPERATION: /*------------------*/ operation = "popStackElement"; /*----------------*/ brk;
		to REMOVE_ALL_STACK_ELEMENTS_STACK_OPERATION: /*----------*/ operation = "removeAllStackElements"; /*---------*/ brk;
		off: /*---------------------------------------------------*/ operation = "<operation>"; /*--------------------*/ brk;
	}
	switch((*stackSystem).code){
		to NONE_STACK_CODE: /*------------------------------------*/ code = NULL; /*----------------------------------*/ brk;
		to SUCCESS_STACK_CODE: /*---------------------------------*/ code = "success"; /*-----------------------------*/ brk;
		to NOTHING_DONE_STACK_CODE: /*----------------------------*/ code = "nothing done"; /*------------------------*/ brk;
		to BAD_INPUT_STACK_CODE: /*-------------------------------*/ code = "bad input"; /*---------------------------*/ brk;
		to UNSET_VALUE_STACK_CODE: /*-----------------------------*/ code = "unset value"; /*-------------------------*/ brk;
		to LOCKED_VARIABLE_STACK_CODE: /*-------------------------*/ code = "locked variable"; /*---------------------*/ brk;
		to FAILED_ALLOCATION_STACK_CODE: /*-----------------------*/ code = "failed allocation"; /*-------------------*/ brk;
		to FAILED_MUTEX_STACK_CODE: /*----------------------------*/ code = "failed mutex"; /*------------------------*/ brk;
		off: /*---------------------------------------------------*/ code = "<code>"; /*------------------------------*/ brk;
	}
	if(operation and code){
		if((*stackSystem).code == SUCCESS_STACK_CODE){
			if(printUnlockedOutput(printSystem, "%s%s: [%ssuccess%s%s] stack system:%s %s() reported \"%s\"\n", (*printSystem).outputColorStart, (*printSystem).programName, (*printSystem).outputColorEvent, (*printSystem).outputColorEnd, (*printSystem).outputColorStart, (*printSystem).outputColorEnd, operation, code)){
				success = true;
			}
		}else{
			if(printUnlockedError(printSystem, "%s%s: [%sfailure%s%s] stack system:%s %s() reported \"%s\"\n", (*printSystem).errorColorStart, (*printSystem).programName, (*printSystem).errorColorError, (*printSystem).errorColorEnd, (*printSystem).errorColorStart, (*printSystem).errorColorEnd, operation, code)){
				success = true;
			}
		}
	}
	unlockMutex(&(*printSystem).mutexSystem);
	jmp emergencyExit;
	emergencyExit:{
		unlockMutex(&(*stackSystem).mutexSystem);
		if(!success){
			ret false;
		}
		ret true;
	}
}

