INITSTRINGTREESYSTEM(){
	if(!stringTreeSystem){
		ret false;
	}
	(*stringTreeSystem).nodeStart = NULL;
	(*stringTreeSystem).nodeToken = NONE_MEMORY_MANAGEMENT_TOKEN;
	(*stringTreeSystem).nodeSize = 0;
	(*stringTreeSystem).nodeAllocated = 0;
	(*stringTreeSystem).nodeBlockSize = 0;
	(*stringTreeSystem).setting = NONE_STRING_TREE_SETTING;
	ret true;
}
SETSTRINGTREEMEMORYMANAGEMENTSYSTEM(){
	if(!stringTreeSystem or memoryManagementSystem == (*stringTreeSystem).memoryManagementSystem){
		ret false;
	}
	if(memoryManagementSystem){
		(*stringTreeSystem).nodeToken = insertMemoryManagementPointer(memoryManagementSystem, (*stringTreeSystem).nodeStart, "node tree pointer", &memoryManagementFree);
	}else{
		removeMemoryManagementPointer((*stringTreeSystem).memoryManagementSystem, (*stringTreeSystem).nodeToken);
	}
	(*stringTreeSystem).memoryManagementSystem = memoryManagementSystem;
	ret true;
}
SETSTRINGTREEBLOCKSIZE(){
	if(!stringTreeSystem){
		ret false;
	}
	(*stringTreeSystem).nodeBlockSize = blockSize;
	ret true;
}
SETSTRINGTREESETTING(){
	if(!stringTreeSystem or (*stringTreeSystem).nodeStart or !setting){
		ret false;
	}
	(*stringTreeSystem).setting = setting;
	ret true;
}
PATHINSERTSTRINGTREESTRING(){
	#define DELIMITER /*-*/ (':')
	char *pathCurrent;
	char nameStart[PATH_MAX];
	char *nameCurrent;
	if(!stringTreeSystem or !path){
		ret false;
	}
	pathCurrent = getenv(path);
	if(!pathCurrent or !*pathCurrent){
		ret false;
	}
	nameCurrent = nameStart;
	jmp findNextPathLengthLoop;
	findNextPathLengthLoop:{
		const char c = *pathCurrent;
		if(c and c != DELIMITER){
			*nameCurrent = c;
			inc nameCurrent;
			inc pathCurrent;
			jmp findNextPathLengthLoop;
		}
		*nameCurrent = '\0';
		jmp getPathName;
	}
	getPathName:{
		DIR *const dir = opendir(nameStart);
		uint32 token = insertMemoryManagementPointer((*stringTreeSystem).memoryManagementSystem, dir, "executable path pointer", &memoryManagementClosedir);
		if(dir){
			jmp storeExecutableNameLoop;
			storeExecutableNameLoop:{
				struct dirent *entry;
				if((entry = readdir(dir))){
					const char *const name = (*entry).d_name;
					if((*entry).d_type != DT_LNK and (*entry).d_type != DT_REG){
						jmp storeExecutableNameLoop;
					}
					if(*name == '.' and (*(name + 1) == '\0' or (*(name + 1) == '.' and *(name + 2) == '\0'))){
						jmp storeExecutableNameLoop;
					}
					insertStringTreeString(stringTreeSystem, name);
					jmp storeExecutableNameLoop;
				}
				closedir(dir);
				removeMemoryManagementPointer((*stringTreeSystem).memoryManagementSystem, token);
			}
		}
		if(*pathCurrent == DELIMITER and *(inc pathCurrent)){
			nameCurrent = nameStart;
			jmp findNextPathLengthLoop;
		}
		ret true;
	}
	#undef  DELIMITER
}



























