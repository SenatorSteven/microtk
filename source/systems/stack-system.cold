SETSTACKELEMENTWIDTH(){
	uint8 code;
	if(!stackSystem){
		ret false;
	}
	if(!lockMutex(&(*stackSystem).mutexSystem)){
		ret false;
	}
	if((*stackSystem).elementAllocated){
		code = LOCKED_VARIABLE_STACK_CODE;
		jmp emergencyExit;
	}
	if(elementWidth == (*stackSystem).elementWidth){
		code = NOTHING_DONE_STACK_CODE;
		jmp emergencyExit;
	}
	if((*stackSystem).elementStart){
		free((*stackSystem).elementStart);
		removeMemoryManagementPointer((*stackSystem).memoryManagementSystem, (*stackSystem).elementToken);
		(*stackSystem).elementStart = NULL;
		(*stackSystem).elementToken = NONE_MEMORY_MANAGEMENT_TOKEN;
		(*stackSystem).elementSize = 0;
		(*stackSystem).elementAllocated = 0;
	}
	(*stackSystem).elementWidth = elementWidth;
	code = SUCCESS_STACK_CODE;
	jmp emergencyExit;
	emergencyExit:{
		(*stackSystem).operation = SET_STACK_ELEMENT_WIDTH_STACK_OPERATION;
		(*stackSystem).code = code;
		unlockMutex(&(*stackSystem).mutexSystem);
		if(code != SUCCESS_STACK_CODE){
			ret false;
		}
		ret true;
	}
}
SETSTACKMULTITHREADING(){
	uint8 code;
	if(!stackSystem){
		ret false;
	}
	multithreaded = !!multithreaded;
	if(multithreaded == (*stackSystem).multithreaded){
		code = NOTHING_DONE_STACK_CODE;
		jmp emergencyExit;
	}
	if(multithreaded){
		if(!createMutex(&(*stackSystem).mutexSystem)){
			code = FAILED_MUTEX_STACK_CODE;
			jmp emergencyExit;
		}
	}else{
		if(!destroyMutex(&(*stackSystem).mutexSystem)){
			code = FAILED_MUTEX_STACK_CODE;
			jmp emergencyExit;
		}
	}
	setMutexMultithreading(&(*stackSystem).mutexSystem, multithreaded);
	(*stackSystem).multithreaded = multithreaded;
	code = SUCCESS_STACK_CODE;
	jmp emergencyExit;
	emergencyExit:{
		(*stackSystem).operation = SET_STACK_MULTITHREADING_STACK_OPERATION;
		(*stackSystem).code = code;
		if(code != SUCCESS_STACK_CODE){
			ret false;
		}
		ret true;
	}
}
PUSHSTACKELEMENT(){
	uint elementWidth;
	uint8 code;
	if(!stackSystem){
		ret false;
	}
	if(!lockMutex(&(*stackSystem).mutexSystem)){
		ret false;
	}
	if(!element){
		code = BAD_INPUT_STACK_CODE;
		jmp emergencyExit;
	}
	elementWidth = (*stackSystem).elementWidth;
	if(!elementWidth){
		code = UNSET_VALUE_STACK_CODE;
		jmp emergencyExit;
	}
	if((*stackSystem).elementAllocated == (*stackSystem).elementSize){
		void *temp;
		if(!(*stackSystem).elementBlockSize){
			code = UNSET_VALUE_STACK_CODE;
			jmp emergencyExit;
		}
		(*stackSystem).elementSize += (*stackSystem).elementBlockSize;
		temp = realloc((*stackSystem).elementStart, (*stackSystem).elementSize * elementWidth);
		if(!(*stackSystem).elementToken){
			(*stackSystem).elementToken = insertMemoryManagementPointer((*stackSystem).memoryManagementSystem, temp, "StackSystem pushStackElement() element pointer", &memoryManagementFree);
		}else{
			updateMemoryManagementPointer((*stackSystem).memoryManagementSystem, (*stackSystem).elementToken, temp);
		}
		if(!temp){
			(*stackSystem).elementSize -= (*stackSystem).elementBlockSize;
			code = FAILED_ALLOCATION_STACK_CODE;
			jmp emergencyExit;
		}
		(*stackSystem).elementStart = temp;
	}
	copyMemory(element, (uint8 *)(*stackSystem).elementStart + (*stackSystem).elementAllocated * elementWidth, elementWidth);
	inc (*stackSystem).elementAllocated;
	code = SUCCESS_STACK_CODE;
	jmp emergencyExit;
	emergencyExit:{
		(*stackSystem).operation = PUSH_STACK_ELEMENT_STACK_OPERATION;
		(*stackSystem).code = code;
		unlockMutex(&(*stackSystem).mutexSystem);
		if(code != SUCCESS_STACK_CODE){
			ret false;
		}
		ret true;
	}
}
POPSTACKELEMENT(){
	uint8 code;
	if(!stackSystem){
		ret false;
	}
	if(!lockMutex(&(*stackSystem).mutexSystem)){
		ret false;
	}
	if(!element){
		code = BAD_INPUT_STACK_CODE;
		jmp emergencyExit;
	}
	if(!(*stackSystem).elementAllocated){
		code = NOTHING_DONE_STACK_CODE;
		jmp emergencyExit;
	}
	dec (*stackSystem).elementAllocated;
	copyMemory((uint8 *)(*stackSystem).elementStart + (*stackSystem).elementAllocated * (*stackSystem).elementWidth, element, (*stackSystem).elementWidth);
	code = SUCCESS_STACK_CODE;
	jmp emergencyExit;
	emergencyExit:{
		(*stackSystem).operation = POP_STACK_ELEMENT_STACK_OPERATION;
		(*stackSystem).code = code;
		unlockMutex(&(*stackSystem).mutexSystem);
		if(code != SUCCESS_STACK_CODE){
			ret false;
		}
		ret true;
	}
}
REMOVEALLSTACKELEMENTS(){
	uint8 code;
	if(!stackSystem){
		ret false;
	}
	if(!lockMutex(&(*stackSystem).mutexSystem)){
		ret false;
	}
	if(!(*stackSystem).elementStart){
		code = NOTHING_DONE_STACK_CODE;
		jmp emergencyExit;
	}
	free((*stackSystem).elementStart);
	removeMemoryManagementPointer((*stackSystem).memoryManagementSystem, (*stackSystem).elementToken);
	(*stackSystem).elementStart = NULL;
	(*stackSystem).elementToken = NONE_MEMORY_MANAGEMENT_TOKEN;
	(*stackSystem).elementSize = 0;
	(*stackSystem).elementAllocated = 0;
	code = SUCCESS_STACK_CODE;
	jmp emergencyExit;
	emergencyExit:{
		(*stackSystem).operation = REMOVE_ALL_STACK_ELEMENTS_STACK_OPERATION;
		(*stackSystem).code = code;
		unlockMutex(&(*stackSystem).mutexSystem);
